@model WebApplication.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Family)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Family)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Given)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Given)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Snumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Snumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.N919)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.N919)
        </dd>
        <dd>
            <table class="table">
                <tr>
                    <th>Number</th>
                    <th>Abbrev</th>

                </tr>
                @foreach (var item in Model.DegreePlans.OrderBy(r => r.DegreePlanId))
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DegreePlanAbbr) </td>
                        <td>@Html.DisplayFor(modelItem => item.DegreePlanName) </td>

                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.StudentId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
