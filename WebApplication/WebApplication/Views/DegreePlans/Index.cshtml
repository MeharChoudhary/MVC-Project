@model IEnumerable<WebApplication.Models.DegreePlan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("DegreePlanAbbr", "Index", new { sortOrder = ViewBag.NameSortParm })                
            </th>
            <th>
                @Html.ActionLink("DegreePlanName", "Index", new { sortOrder = ViewBag.PlanNameSortParm })                
            </th>
            <th>
                @Html.ActionLink("DegreePlanSelected", "Index", new { sortOrder = ViewBag.NumberSortParm })                
            </th>
            <th>
                @Html.ActionLink("Student", "Index", new { sortOrder = ViewBag.StudentNumberSortParm })                
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DegreePlanAbbr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreePlanName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DegreePlanSelected)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DegreePlanId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DegreePlanId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DegreePlanId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
